# LLM配置
# 支持的提供商: openai, deepseek
LLM_PROVIDER=openai

# OpenAI模型: gpt-4o, gpt-4o-mini, gpt-3.5-turbo, gpt-4, gpt-4-turbo
# DeepSeek模型: deepseek-chat, deepseek-coder, deepseek-llm-7b-chat
LLM_MODEL=gpt-4o-mini

# API密钥 (根据提供商选择对应的密钥)
LLM_API_KEY=your_openai_api_key_here
# DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 记忆配置
# 短期记忆最大轮数（达到此轮数后会清理旧记忆）
SHORT_TERM_MAX_ROUNDS=10
# 记忆更新间隔（每N轮对话触发一次长期记忆更新）
MEMORY_UPDATE_INTERVAL=10

# 系统配置
LOG_LEVEL=INFO
TEMPERATURE=0.7
